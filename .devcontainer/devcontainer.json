{
  "name": "GPU I/O Libraries",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "containerEnv": {
    "CUDA_HOME": "/usr/local/cuda",
    "NVIDIA_VISIBLE_DEVICES": "all",
    "NVIDIA_DRIVER_CAPABILITIES": "compute,utility"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "nvidia.nsight-vscode-edition"
      ],
      "settings": {
        "cmake.configureOnOpen": false,
        "C_Cpp.default.cppStandard": "c++20"
      }
    }
  },
  "runArgs": [
    "--gpus=all",
    "--shm-size=2gb"
  ],
  "postCreateCommand": "git config --global --add safe.directory /IdeaProjects/gpu-io-libs && git config --global --add safe.directory /workspace",
  "remoteUser": "iowarp"
}
