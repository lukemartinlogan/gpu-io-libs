{
  "name": "IOWarp GPU I/O Libraries",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "USERNAME": "iowarp",
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "nvidia.nsight-vscode-edition"
      ],
      "settings": {
        "cmake.configureOnOpen": false,
        "C_Cpp.default.cppStandard": "c++20",
        "C_Cpp.default.compilerPath": "/usr/bin/g++",
        "files.associations": {
          "*.h": "cpp",
          "*.cuh": "cuda-cpp"
        }
      }
    }
  },

  "runArgs": [
    "--gpus=all",
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined"
  ],

  "postCreateCommand": "show-versions",

  "remoteUser": "iowarp"
}
